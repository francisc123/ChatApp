<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE5DD"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#075E54"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                android:layout_marginEnd="10dp">
                <ImageView
                    android:id="@+id/imgProfileToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher_round"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/txtChatName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/layoutInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnAttach"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            android:backgroundTint="#075E54"
            android:textColor="#FFFFFF"
            android:insetTop="0dp"
            android:insetBottom="0dp"/>

        <EditText
            android:id="@+id/inputMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Scrie un mesaj"
            android:padding="10dp"
            android:maxLines="4"
            android:textColor="#000000"
            android:textColorHint="#808080"/>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:backgroundTint="#075E54"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutPreview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#E0E0E0"
        android:layout_above="@id/layoutInput"
        android:padding="10dp"
        android:visibility="gone"> <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:background="#999999"/>

        <TextView
            android:id="@+id/txtPreviewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgPreview"
            android:layout_marginStart="10dp"
            android:text="nume_fisier.pdf"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnCancelPreview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="X"
            android:backgroundTint="#FF0000"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/layoutPreview"
        android:padding="8dp"/>

</RelativeLayout>